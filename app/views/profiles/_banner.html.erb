<div class="bg-gradient-to-r from-orange-500 to-pink-500 rounded-lg shadow-lg p-6 mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-white"><%= user.username %></h1>
        <p class="text-white opacity-75">Joined <%= user.created_at.strftime("%B %d, %Y") %></p>
      </div>
      <% if current_user == user %>
        <%= link_to edit_user_registration_path, class: "text-white hover:text-gray-200 transition-colors duration-200" do %>
          <i class="fas fa-pen"></i>
        <% end %>
      <% end %>
    </div>
    <div class="mt-6 flex space-x-4">
      <div class="bg-white bg-opacity-20 rounded-lg p-3">
        <p class="text-white text-lg font-semibold"><%= user.articles.count %></p>
        <p class="text-white text-sm">Theories</p>
      </div>
      <div class="bg-white bg-opacity-20 rounded-lg p-3">
        <p class="text-white text-lg font-semibold"><%= total_votes %></p>
        <p class="text-white text-sm">Votes</p>
      </div>
      <div class="bg-white bg-opacity-20 rounded-lg p-3">
        <p class="text-white text-lg font-semibold"><%= total_comments %></p>
        <p class="text-white text-sm">Comments</p>
      </div>
    </div>
  </div>