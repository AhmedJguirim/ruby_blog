<div class="bg-gray-50 rounded-lg p-3 mb-2">
    <p class="text-gray-800 mb-1"><%= criticism.content %></p>
    <div class="flex items-center justify-between text-xs">
      <span class="text-gray-600">By: <%= criticism.user.username %></span>
      <% if current_user == criticism.user %>
        <%= link_to 'Delete', article_comment_criticism_path(@article, comment, criticism),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "text-red-500 hover:text-red-700 transition-colors duration-200" %>
      <% end %>
    </div>
  </div>